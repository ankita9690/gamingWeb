<%- include("partials/header") -%>
<!-- custom css -->
<link rel="stylesheet" href="css/profile.css">

<body>

<form action="/profile" method="post" >
  <section class="vh-100">

    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-6 mb-4 mb-lg-0">
          <div class="card mb-3">

            <div class="row g-0">

              <div id="imagesection" class="col-md-4">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                <input style="width: 200px" type="text" name="playername" value="" placeholder="Player Name" autocomplete="off">
                <button type="submit" name="button" class="btn btn-success"  style="margin:15px"> Save </button>

              </div>

              <div id="infosection" class="col-md-8">
                <div class="card-body p-4">
                  <h5>Player Details <i class="fa-regular fa-circle-question"></i></h5>
                  <hr class="mt-2 mb-4">
                  <div class="row pt-1">
                    <div class="col-6 mb-3">
                      <h6> <i class="fa-solid fa-envelope"></i> Email </h6>
                      <input  style="width: 150px" type="text" name="playeremail" value="" placeholder="Email" autocomplete="off">
                    </div>
                    <div class="col-6 mb-3">
                      <h6> <i class="fa-solid fa-square-phone-flip"></i> Phone </h6>
                      <input style="width: 150px" type="text" name="playernum" value="" placeholder="Phone No" autocomplete="off">
                    </div>
                  </div>
                  <!-- <h5>Game Score <i class="fa-regular fa-star"></i></h5>
                  <hr class="mt-2 mb-4">
                  <div class="row pt-1">
                    <div class="col-6 m-6">
                      <h6><i class="fa-solid fa-star"></i> Score</h6>
                      <p class="text-muted">Score display here</p>
                    </div>
                  </div> -->

                </div>
              </div>

            </div>

          </div>
        </div>
      </div>
    </div>

  </section>
</form>

</body>

